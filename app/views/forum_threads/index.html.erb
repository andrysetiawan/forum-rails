<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<% if user_signed_in? %>
		<%= link_to "Buat Diskusi", new_forum_thread_path, class: 'btn btn-primary' %>
		<% end %>

		<% @threads.each do |t| %>
			<div class="thread">
				<h4><%= link_to t.title.titleize, forum_thread_path(t) %> <span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span></h4>
				<div class="meta">
					<%= I18n.l(t.created_at.to_date) %> oleh <%= t.user.name %>
				</div>
				<div class="content">
					<%= t.content %>
				</div>
				<div class="count">
					<%= t.forum_posts_count %> obrolan
				</div>
				<div class="clear">	</div>
			</div>
		<% end %>
	</div>
</div>
